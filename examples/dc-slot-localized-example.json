{
    "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "id": "https://raw.githubusercontent.com/amplience/dc-integrations-sfcc/master/examples/dc-slot-localized-example.json",
    "title": "SFCC Slot Localized Example",
    "description": "SFCC Localized Slot with site ID",
    "type": "object",
    "properties": {
        "_environment": {
            "type": "object",
            "properties": {
                "sfcc_slot": {
                    "$ref": "https://raw.githubusercontent.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc.json#/definitions/sfcc_slot"
                },
                "sfcc_category_slot": {
                    "$ref": "https://raw.githubusercontent.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc.json#/definitions/sfcc_category_slot"
                },
                "sfcc_site": {
                    "allOf": [
                        {
                            "$ref": "https://raw.githubusercontent.com/amplience/dc-integrations-sfcc/master/content-types/sfcc/sfcc-site.json#"
                        },
                        {
                            "properties": {
                                "site_id": {
                                    "enum": [
                                        "RefArchGlobal",
                                        "MobileFirstGlobal"
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        },
        "content": {
            "allOf": [
                {
                    "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
                },
                {
                    "properties": {
                        "values": {
                            "items": {
                                "properties": {
                                    "value": {
                                        "title": "Localized Content",
                                        "type": "object",
                                        "allOf": [
                                            {
                                                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                                            },
                                            {
                                                "properties": {
                                                    "contentType": {
                                                        "title": "Slot Content",
                                                        "enum": [
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/slider.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/promobanner.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/video.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/text.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/externalblock.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/splitblock.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/cardlist.json",
                                                            "https://dev-solutions.s3.amazonaws.com/DynamicContentTypes/Accelerators/image.json"
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}